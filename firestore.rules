rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // users collection: { role: "mpk" | "admin" | "user", angkatan: 27, name: "Nama" }
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // creation of user role should be done via Firebase Console or Admin SDK - block client writes
      allow write: if false;
    }

    // assessments: id expected format participant_proker_assessor
    match /assessments/{assId} {
      allow create: if request.auth != null
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ["mpk","admin"]
        && request.resource.data.assessorId == request.auth.uid
        && request.resource.data.participantId is string
        && request.resource.data.participantId.size() > 0
        && !exists(/databases/$(database)/documents/assessments/$(assId));
      allow read: if request.auth != null
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ["mpk","admin"];
      allow update, delete: if false;
    }

    // participants (optional) - read-only for authorized users
    match /participants/{pId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
